<Window x:Class="DemExamReadyy.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemExamReadyy.View"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="344">
    <Grid>

        <GroupBox Header="Логин" Margin="0,69,10,275">
            <TextBox Text="{Binding Login}" Margin="10,0,13,0" TextWrapping="Wrap" Height="39" />
        </GroupBox>
        <GroupBox Header="Пароль" Margin="2,177,8,160">
            <TextBox Text="{Binding Password}" Margin="10,0,13,0" TextWrapping="Wrap" Height="39" />
        </GroupBox>
        <Button Content="Войти" Margin="119,398,119,0" Height="20" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="116,0,0,134" TextWrapping="Wrap" Text="{Binding Captcha}" FontSize="16" TextDecorations="Strikethrough" VerticalAlignment="Bottom" Width="154"/>
        <GroupBox Header="Капча" Margin="5,315,5,45">
            <TextBox Text="{Binding CorrectCapthca}" Margin="10,0,13,0" TextWrapping="Wrap" Height="39" />
        </GroupBox>

    </Grid>
</Window>
